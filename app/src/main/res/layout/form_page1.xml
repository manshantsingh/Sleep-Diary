<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_page1_color">

    <ImageView
        android:id="@+id/form_page1_imageView"
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:layout_marginTop="90dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/form_page1_descTextView"
        android:textSize="@dimen/slide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="@string/form_page1_desc"
        android:textAlignment="center"
        android:layout_below="@+id/form_page1_imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/form_page1_coffeeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form_page1_descTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textSize="@dimen/slide_desc"
        android:text="@string/form_page1_coffeeCountText" android:background="@drawable/r_rectangle_box" />

    <Button
        android:id="@+id/form_page1_minusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minusButton"
        android:onClick="decrementCount"
        android:layout_alignTop="@+id/form_page1_coffeeCount"
        android:layout_toStartOf="@+id/form_page1_imageView" />

    <Button
        android:id="@+id/form_page1_plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plusButton"
        android:onClick="incrementCount"
        android:layout_alignBottom="@+id/form_page1_coffeeCount"
        android:layout_toEndOf="@+id/form_page1_imageView" />


</RelativeLayout>
